{
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist",
    "module": "es6",
    "target": "es5",
    "jsx" :  "react",
    "lib": [
      "es2015",
      "es2016.array.include",
      "es2017"
    ],
    "sourceMap": true,
    "inlineSources": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "isolatedModules": false,
    "pretty": false,
    "allowJs": true,
    "importHelpers": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts",
    "dist"
  ],
  "types": []
}
